
<%= notice %>


<h1>See all posts</h1>

<table>
  <thead>
    <tr>
      <th> Status: </th>
      <th> User: </th>
      <th> Number of Likes: </th>
    </tr>
 </thead>


    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.status, post %></td>
        <td><%= post.user %></td>
        <td><%= link_to "Like", number_of_likes_path(id: post.id), method: :post %></td>
        <td><%= post.number_of_likes %>  </td>
        <td><%= link_to "Delete Post", post, method: :delete %></td>
      </tr>

      <% end %>
    <tbody>
</table>
<br>



<%= link_to "Create a Post", new_post_path %>
